<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_one"
    tools:context=".EditExistingTestActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="781dp"
        android:layout_height="1066dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">


            <TextView
                android:id="@+id/existing_test_title"
                android:layout_width="445dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="84dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/unica_one"
                android:text="Test Title Goes Here"
                android:textAlignment="center"
                android:textSize="40dp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/one_test_add_question_button"
                android:layout_width="122dp"
                android:layout_height="27dp"
                android:layout_above="@+id/existing_test_questions"
                android:layout_marginStart="20dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/capsule_button"
                android:text="Add Question"

                android:textColor="@color/colorPrimary" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/existing_test_questions"
                android:layout_width="768dp"
                android:layout_height="583dp"
                android:layout_below="@+id/existing_test_title"
                android:layout_marginStart="20dp"
                android:layout_marginTop="67dp"

                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/question_count_text"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_below="@+id/existing_test_questions"
                android:layout_marginStart="20dp"
                android:layout_marginTop="161dp"
                android:layout_marginEnd="8dp"
                android:text="Question Count"
                android:textSize="25sp"
                android:textStyle="bold" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>